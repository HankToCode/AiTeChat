<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ContactItemView">
        <attr name="contactItemImage" format="reference"/>
        <attr name="contactItemName" format="string|reference"/>
        <attr name="contactItemBottomLineMarginLeft" format="dimension"/>
        <attr name="contactItemBottomLineMarginRight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ArrowItemView">
        <attr name="arrowItemTitle" format="string|reference"/>
        <attr name="arrowItemTitleColor" format="color|reference"/>
        <attr name="arrowItemTitleSize" format="dimension|reference"/>
        <attr name="arrowItemContent" format="string|reference"/>
        <attr name="arrowItemContentColor" format="color|reference"/>
        <attr name="arrowItemContentSize" format="dimension|reference"/>
        <attr name="arrowItemShowDivider" format="boolean"/>
        <attr name="arrowItemShowArrow" format="boolean"/>
        <attr name="arrowItemShowAvatar" format="boolean"/>
        <attr name="arrowItemAvatarSrc" format="reference"/>
        <attr name="arrowItemAvatarHeight" format="dimension|reference"/>
        <attr name="arrowItemAvatarWidth" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="SwitchItemView">
        <attr name="switchItemTitle" format="string|reference"/>
        <attr name="switchItemTitleColor" format="color|reference"/>
        <attr name="switchItemTitleSize" format="dimension|reference"/>
        <attr name="switchItemShowDivider" format="boolean"/>
        <attr name="switchItemHint" format="string|reference"/>
        <attr name="switchItemCheckEnable" format="boolean"/>
        <attr name="switchItemClickable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SearchBar">
        <attr name="hint" format="string" />
        <attr name="hintImg" format="reference" />
    </declare-styleable>


    <declare-styleable name="ConversationItemView">
        <attr name="conversationItemImage" format="reference"/>
        <attr name="conversationItemName" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="color1" format="reference|color"/>
        <attr name="color2" format="reference|color"/>
        <attr name="color3" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <!-- 密码的个数 -->
        <attr name="passwordNumber" format="integer"/>
        <!-- 密码圆点的半径 -->
        <attr name="passwordRadius" format="dimension" />
        <!-- 密码圆点的颜色 -->
        <attr name="passwordColor" format="color" />
        <!-- 分割线的颜色 -->
        <attr name="divisionLineColor" format="color" />
        <!-- 分割线的大小 -->
        <attr name="divisionLineSize" format="color" />
        <!-- 背景边框的颜色 -->
        <attr name="bgColor" format="color" />
        <!-- 背景边框的大小 -->
        <attr name="bgSize" format="dimension" />
        <!-- 背景边框的圆角大小 -->
        <attr name="bgCorner" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PasswordInputEdt">

        <attr name="isPwd" format="boolean" />
        <attr name="autoCloseKeyBoard" format="boolean" />
        <attr name="isNumber" format="boolean" />
        <attr name="widthSpace" format="dimension" />
        <attr name="heightSpace" format="dimension" />
        <attr name="rectStroke" format="dimension" />
        <attr name="txtSize" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="bgFill" format="boolean" />
        <attr name="numLength" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="rectNormalColor" format="color" />
        <attr name="rectChooseColor" format="color" />
        <attr name="pwdType" format="enum" >
            <enum name="CIRCLE" value="0"/>
            <enum name="XINGHAO" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="XNumberKeyboardView">
        <!--左下角按键的背景色-->
        <attr name="xnkv_blKeyBackground" format="color|reference"/>
        <!--右下角按键的图标-->
        <attr name="xnkv_brKeyDrawable" format="reference"/>
        <!--右下角按键的背景-->
        <attr name="xnkv_brKeyBackground" format="color|reference"/>
        <!--右下角按键图标的宽度-->
        <attr name="xnkv_brKeyDrawableWidth" format="dimension"/>
        <!--右下角按键图标的高度-->
        <attr name="xnkv_brKeyDrawableHeight" format="dimension"/>
        <attr name="android:keyTextSize" format="dimension"/>
        <attr name="android:keyTextColor" format="dimension"/>
        <!--键盘的类型-->
        <attr name="xnkv_type">
            <!--纯数字键盘-->
            <enum name="number" value="1"/>
            <!--带小数点的数字键盘-->
            <enum name="digit" value="2"/>
            <!--输入身份证的数字键盘-->
            <enum name="idcard" value="3"/>
        </attr>
    </declare-styleable>

</resources>