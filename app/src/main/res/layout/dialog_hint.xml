<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/shape_dialog_hint"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="100"
        android:gravity="center"
        android:textSize="18dp"
        tools:text="---" />

    <View
        style="@style/LineGray"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/ll_hint_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:minHeight="48dp">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16dp"
            tools:text="---" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        style="@style/LineGray" />

    <LinearLayout
        android:id="@+id/llLeftRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btLeft"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_hint_button_left"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:textSize="16dp"
            tools:text="---" />

        <Button
            android:id="@+id/btRight"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_hint_button_right"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:text="---" />
    </LinearLayout>

    <Button
        android:id="@+id/btCenter"
        style="@style/ButtonStylePrimary"
        android:layout_width="124dp"
        android:layout_marginBottom="16dp"
        tools:text="---" />
</LinearLayout>