<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_set_paypwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="设置支付密码"
        android:textColor="#ff333333"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="23sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开通钱包支付前需要设置支付密码"
        android:textColor="#ff666666"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        />

    <com.android.nanguo.app.weight.PasswordInputEdt
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        app:autoCloseKeyBoard="true"
        app:isNumber="true"
        app:isPwd="true"
        app:numLength="6"
        app:rectChooseColor="@color/common_botton_bar_blue"
        app:rectNormalColor="@color/cal_unreach_day"
        app:widthSpace="@dimen/dp_5"
        />


</LinearLayout>
