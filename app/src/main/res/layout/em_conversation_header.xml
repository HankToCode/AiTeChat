<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_search_height"
        android:hint="@string/search"
        android:focusable="true"
        android:gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:focusableInTouchMode="true"
        style="@style/demo_search_et_style" />
    <com.ycf.qianzhihe.app.weight.ConversationItemView
        android:id="@+id/friend_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_message_item_height"
        app:conversationItemImage="@drawable/ic_new_friends"
        app:conversationItemName="@string/new_friends"/>

    <com.ycf.qianzhihe.app.weight.ConversationItemView
        android:id="@+id/group_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_message_item_height"
        app:conversationItemImage="@drawable/ic_group_notice"
        app:conversationItemName="@string/groups_notice"/>


</LinearLayout>