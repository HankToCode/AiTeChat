<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.hyphenate.easeim.app.weight.ConversationItemView
        android:id="@+id/friend_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:conversationItemImage="@drawable/ic_new_friends"
        app:conversationItemName="@string/new_friends"/>

    <com.hyphenate.easeim.app.weight.ConversationItemView
        android:id="@+id/group_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:conversationItemImage="@drawable/ic_group_notice"
        app:conversationItemName="@string/groups_notice"/>


</LinearLayout>