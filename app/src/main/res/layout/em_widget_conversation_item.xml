<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:duplicateParentState="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_new_friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_message_item_height"
        android:layout_centerInParent="true">

        <com.hyphenate.easeui.widget.EaseImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/ic_ng_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="新朋友"
                android:textColor="@color/color_171C20" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/iv_aite_guanfang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingEnd="3dp"
                android:paddingBottom="1dp"
                android:text="官方"
                android:textColor="@color/color_53B0F7"
                android:textSize="8dp"
                android:visibility="gone"
                app:stv_stroke_color="@color/color_53B0F7"
                app:stv_stroke_width="0.5dp" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/unread_msg_number"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginStart="12dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/msg_date"
                app:layout_constraintTop_toBottomOf="@+id/msg_date"
                app:stv_corner="30dp"
                tools:visibility="visible"
                app:stv_solid="@color/color_FF0000" />
        </LinearLayout>


        <TextView
            android:id="@+id/msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="12:00"
            android:textColor="@color/color_ACACBC"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/avatar" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
