<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_top_bg"
        android:orientation="vertical">

        <com.hyphenate.easeui.widget.EaseTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/em_common_title_bar_height"
            app:titleBarDisplayHomeAsUpEnabled="true"
            app:titleBarLeftImage="@mipmap/icon_back_white"
            app:titleBarTitle="用户详情"
            app:titleBarTitleTextColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_white_top"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14">

            <com.hyphenate.easeui.widget.EaseImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                app:ease_shape_type="rectangle"
                android:src="@mipmap/img_default_avatar"/>

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/img_head"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="***" />
            <ImageView
                android:id="@+id/iv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_nick_name"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/tv_nick_name"
                android:src="@mipmap/icon_start"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_online_status"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/dot_green" />
            <TextView
                android:id="@+id/line_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="#666666"
                android:textSize="@dimen/sp_11"
                tools:text="在线"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_head"
                android:textColor="#666666"
                android:textSize="@dimen/sp_11"
                tools:text="@string/str_chat_account" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windows_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:showDividers="middle"
        android:visibility="visible">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/selector_comm_btn"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="个性签名"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:hint=""
                android:layout_marginLeft="@dimen/dp_5"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_15"
                tools:text="" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="验证信息"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_80"
            android:background="@drawable/bg_edittext"
            android:hint="说点什么吧..."
            android:padding="@dimen/dp_15"
            android:singleLine="true"
            android:textColorHint="#b3b3b3"
            android:gravity="left|top"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:id="@+id/tv_add_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/shape_gradual_bg"
            android:gravity="center"
            android:text="添加好友"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />


    </LinearLayout>
</LinearLayout>