<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_splash_action"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <com.hyphenate.easeui.widget.EaseTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/em_common_title_bar_height"
            app:titleBarDisplayHomeAsUpEnabled="true"
            app:titleBarLeftImage="@mipmap/icon_back_white"
            app:titleBarTitle="设置"
            app:titleBarTitlePosition="left"
            app:titleBarTitleTextColor="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:layout_centerVertical="true"
                tools:src="@mipmap/ic_ng_avatar" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/img_head"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                tools:text="程吉吉" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jingru" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:showDividers="middle"
        android:visibility="visible">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_report_white_radius"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="南国号"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_16" />

            <!--
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_12"
            -->
            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_toRightOf="@+id/tv_acc"

                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="未设置"

                android:textColor="@color/grey_2"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_report_white_radius"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_12"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/sp_14"
                tools:text="188-5597-2230" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_qr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_report_white_radius"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的二维码"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/saima"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_2"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_report_white_radius"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="分享我的名片"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_12"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="添加我时是否需要验证"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_16" />

            <com.zds.base.widget.SwitchButton
                android:id="@+id/sb_verify"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:sb_border_width="@dimen/dp_1"
                app:sb_checked_color="#0B65FE"
                app:sb_shadow_effect="true"
                app:sb_show_indicator="false"
                app:sb_uncheck_color="#C2C2C2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_report_white_radius"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_16" />

            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_15" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_15" />
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_sign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_report_white_radius"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="个性签名"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:hint=""
                android:layout_marginLeft="@dimen/dp_5"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_15"
                tools:text="" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_logoff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_14"
            android:text="注销账号"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>