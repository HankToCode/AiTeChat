<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        android:background="@color/white"
        app:titleBarDisplayHomeAsUpEnabled="true"
        app:titleBarLeftImage="@drawable/ic_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/cl_withdraw_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_select_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shap_gray_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_15">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/dp_6"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="选择银行卡"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableRight="@drawable/jingru"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/dp_6"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:drawableLeft="@mipmap/icon_bank"
                    android:text="选择银行卡"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_hand_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_15"
                android:text="提现金额"
                android:textColor="#2B2929"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_26">

                <TextView
                    android:id="@+id/tv_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="¥"
                    android:textColor="#2B2929"
                    android:textSize="@dimen/sp_18" />

                <EditText
                    android:id="@+id/et_withdraw_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@+id/tv_l"
                    android:background="@null"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:textColor="#3B3A3A"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_32"
                    tools:text="0.0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_31"
                    android:background="#E0E0E0" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_my_money_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_27"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:textColor="#9D9D9D"
                    android:textSize="@dimen/sp_13"
                    tools:text="可用余额：0.00元" />
                <TextView
                    android:id="@+id/tv_my_money_hint_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:textColor="@color/blue2"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:textSize="@dimen/sp_13"
                    tools:text="全部提现"
                    android:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_new_bank_card_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_31"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/comm_affirm_btn"
                android:gravity="center"
                android:text="下一步"
                android:textColor="#FFFEFE"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:text="提现说明："
                android:lineSpacingExtra="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_16"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/tv_tixian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                tools:text="aaaaaaaa"
                android:lineSpacingExtra="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>