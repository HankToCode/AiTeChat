<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_2">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">

        <com.hyphenate.easeui.widget.EaseImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/chat_user_head_size"
            android:layout_height="@dimen/chat_user_head_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_ng_avatar" />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/red_package_width"
            android:layout_height="@dimen/red_package_height"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/iv_userhead"
            android:background="@mipmap/bg_bubble_transfer_sent">

            <TextView
                android:id="@+id/tv_transfer_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:text="转账金额" />

            <TextView
                android:id="@+id/tv_money_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_transfer_received"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="4dp"
                android:layout_marginRight="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="10dp"
                tools:text="转账给离夏惜柚" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/hb_margin_bottom"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="12:12:12"
                android:textColor="@color/color_999999"
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bubble_mask"
            android:layout_width="@dimen/red_package_width"
            android:layout_height="@dimen/red_package_height"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/iv_userhead"
            android:background="@color/color_44_white"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>