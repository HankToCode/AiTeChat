<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_bg"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        android:background="@color/white"
        app:titleBarDisplayHomeAsUpEnabled="true"
        app:titleBarLeftImage="@drawable/ic_back"
        app:titleBarTitle="靓号商城" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shap_white">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="特价靓号"
                android:textColor="#ffacacbc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#ffacacbc"
                android:textSize="13sp"
                android:visibility="visible" />
        </LinearLayout>

        <GridView
            android:id="@+id/gv_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingLeft="@dimen/dp_8"
            android:numColumns="3"
            android:verticalSpacing="@dimen/dp_10"
            android:layout_below="@id/ll_top" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shap_white">

        <LinearLayout
            android:id="@+id/ll_jx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="精选靓号"
                android:textColor="#ffacacbc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#ffacacbc"
                android:textSize="13sp"
                android:visibility="visible" />
        </LinearLayout>

        <GridView
            android:id="@+id/gv_gridview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingLeft="@dimen/dp_10"
            android:numColumns="3"
            android:verticalSpacing="@dimen/dp_10"
            android:layout_below="@id/ll_jx" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shap_white">

        <LinearLayout
            android:id="@+id/ll_dh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="精选叠号"
                android:textColor="#ffacacbc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_more3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#ffacacbc"
                android:textSize="13sp"
                android:visibility="visible" />
        </LinearLayout>

        <GridView
            android:id="@+id/gv_gridview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingLeft="@dimen/dp_10"
            android:numColumns="3"
            android:verticalSpacing="@dimen/dp_10"
            android:layout_below="@id/ll_dh" />
    </RelativeLayout>


</LinearLayout>