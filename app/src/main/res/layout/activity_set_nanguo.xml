<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gray"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        android:background="@color/white"
        app:titleBarDisplayHomeAsUpEnabled="true"
        app:titleBarLeftImage="@drawable/ic_back"
        app:titleBarTitle="设置" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_border_main_red"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_reset_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="重置登录密码"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@mipmap/icon_reset_login"
            android:textColor="#ff333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_reset_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="重置支付密码"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@mipmap/icon_reset_pay"
            android:textColor="#ff333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_reset_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="黑名单"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@mipmap/icon_reset_black"
            android:textColor="#ff333333"
            android:textSize="14sp" />

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_25"
         android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/bg_border_main_red"
        android:gravity="center_vertical">
         <TextView
             android:id="@+id/tv_clear"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="清理缓存"
             android:gravity="center"
             android:drawablePadding="@dimen/dp_15"
             android:drawableTop="@mipmap/icon_set_clean"
             android:textColor="#ff333333"
             android:textSize="14sp" />
         <TextView
             android:id="@+id/tv_version"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="版本"
             android:gravity="center"
             android:drawablePadding="@dimen/dp_15"
             android:drawableTop="@mipmap/icon_set_version"
             android:textColor="#ff333333"
             android:textSize="14sp" />
         <TextView
             android:id="@+id/tv_logoff"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="注销账号"
             android:gravity="center"
             android:drawablePadding="@dimen/dp_15"
             android:drawableTop="@mipmap/icon_logout"
             android:textColor="#ff333333"
             android:textSize="14sp" />
     </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:text="退出登录"
        android:textColor="#ff333333"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@color/white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="《用户协议》"
            android:textColor="@color/text_color_user_info_blue"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/grey_2"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_register_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="@color/text_color_user_info_blue"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</LinearLayout>
