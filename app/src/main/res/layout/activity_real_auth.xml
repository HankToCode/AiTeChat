<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        app:titleBarTitle="填写身份信息"
        app:titleBarTitlePosition="left"
        app:titleBarLeftImage="@mipmap/ic_back_black"
        app:titleBarDisplayHomeAsUpEnabled="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_realname_bg" />
            <LinearLayout
                android:id="@+id/ll_real_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_25"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#ff333333"
                    android:drawablePadding="@dimen/dp_6"
                    android:drawableLeft="@mipmap/icon_realname"
                    android:textSize="@dimen/sp_12"
                    />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_23221E" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号码"
                    android:layout_marginTop="@dimen/dp_18"
                    android:textColor="#ff333333"
                    android:drawablePadding="@dimen/dp_6"
                    android:drawableLeft="@mipmap/icon_realcard"
                    android:textSize="@dimen/sp_12"
                    />
                <EditText
                    android:id="@+id/et_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@null"
                    android:hint="请输入身份证号码"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_15"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_23221E" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:layout_marginTop="@dimen/dp_18"
                    android:textColor="#ff333333"
                    android:drawablePadding="@dimen/dp_6"
                    android:drawableLeft="@mipmap/icon_realphone"
                    android:textSize="@dimen/sp_12"
                    />
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_15"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_23221E" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 需本人实名认证电话"
                    android:textColor="@color/red"
                    android:textSize="14sp" />
            </LinearLayout>






            <LinearLayout
                android:id="@+id/ll_select_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shap_gray_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableRight="@drawable/jingru"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="支付方式"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证成功！"
                android:textColor="#ff333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_40"
                android:textSize="23sp"
                android:visibility="gone"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shap_blue">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="确定开通"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </FrameLayout>


            <!--    充值说明-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shap_gray_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="认证说明：实名认证即开通南国支付账户，用户需提交真实有效的身份信息，采用云签人脸认证，公安库权威数据对比。"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
