<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_top_bg"
        android:orientation="vertical">

        <com.hyphenate.easeui.widget.EaseTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/em_common_title_bar_height"
            app:titleBarDisplayHomeAsUpEnabled="true"
            app:titleBarLeftImage="@mipmap/icon_back_white"
            app:titleBarTitle="用户详情"
            app:titleBarTitleTextColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_white_top"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                tools:src="@mipmap/img_default_avatar" />

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/img_head"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="***" />
            <ImageView
                android:id="@+id/iv_online_status"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/dot_green" />
            <TextView
                android:id="@+id/line_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="#666666"
                android:textSize="@dimen/sp_11"
                tools:text="在线"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_head"
                android:textColor="#666666"
                android:textSize="@dimen/sp_11"
                tools:text="@string/str_chat_account" />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/windowBackground"
            android:orientation="vertical"
            android:padding="@dimen/dp_15"
            android:showDividers="middle"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/layout_inviter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="邀请人"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_inviter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:text="***"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/llay_remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/selector_comm_btn"
                android:paddingLeft="@dimen/dp_15"

                android:paddingRight="@dimen/dp_20">

                <TextView
                    android:id="@id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="备注"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_base"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/jingru" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_base"
                    android:layout_toRightOf="@+id/tv_tag"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint=""
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_15"
                    tools:text="" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/selector_comm_btn"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="个性签名"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint=""
                    android:layout_marginLeft="@dimen/dp_5"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_15"
                    tools:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"

                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="置顶会话"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />


                    <CheckBox
                        android:id="@+id/switch_top_conversation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@null"
                        android:button="@drawable/selector_checkbox" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="消息免打扰"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />

                    <CheckBox
                        android:id="@+id/switch_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@null"
                        android:button="@drawable/selector_checkbox" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="加入黑名单"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/sp_15" />

                    <CheckBox
                        android:id="@+id/switch_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@null"
                        android:button="@drawable/selector_checkbox" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_chat_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="1dp"
                android:background="@drawable/selector_comm_btn"
                android:drawableRight="@mipmap/jingru"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_18"
                android:text="查找聊天记录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/tv_clear_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="1dp"
                android:background="@drawable/selector_comm_btn"
                android:drawableRight="@mipmap/jingru"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_18"
                android:text="清空聊天记录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/tv_chat_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white"
                android:drawableRight="@drawable/more_1x"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_18"
                android:text="聊天背景"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:drawableRight="@mipmap/ic_item_more"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_20"
                android:text="举报"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_del_friend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/selector_comm_btn"
                android:gravity="center"
                android:text="删除好友"
                android:textColor="#F55151"
                android:textSize="@dimen/sp_15"
                android:visibility="visible" />
            <RelativeLayout
                android:id="@+id/rl_mute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="禁言"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <CheckBox
                    android:id="@+id/switch_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:button="@drawable/selector_checkbox" />

            </RelativeLayout>


            <TextView
                android:id="@+id/kick_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/selector_comm_btn"
                android:gravity="center"
                android:text="移出本群"
                android:textColor="#F55151"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />


            <FrameLayout
                android:id="@+id/fl_send_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="1dp"
                android:background="@drawable/shape_gradual_bg"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="发消息"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_add_friend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/shape_gradual_bg"
                android:gravity="center"
                android:text="添加好友"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />


        </LinearLayout>


    </ScrollView>
</LinearLayout>