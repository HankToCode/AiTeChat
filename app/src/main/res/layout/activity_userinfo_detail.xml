<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_user_info"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        android:paddingRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarDisplayHomeAsUpEnabled="true"
        app:titleBarLeftImage="@mipmap/icon_back_white"
        app:titleBarRightImage="@mipmap/ic_main_message_add"
        app:titleBarRightVisible="true"
        app:titleBarTitleTextColor="@color/white" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:drawableEnd="@mipmap/ic_main_message_add"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="@id/title_bar"
        app:layout_constraintTop_toTopOf="@id/title_bar"
        tools:text="备注"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_ng_avatar" />

        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_qr_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_head"
            tools:text="魔法少女阿西" />

        <ImageView
            android:id="@+id/iv_vip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@mipmap/ic_main_mine_vip"
            app:layout_constraintBottom_toBottomOf="@id/tv_nick_name"
            app:layout_constraintStart_toEndOf="@id/tv_nick_name"
            app:layout_constraintTop_toTopOf="@id/tv_nick_name" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nick_name"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toStartOf="@id/tv_nick_name"
            app:layout_constraintTop_toBottomOf="@id/tv_nick_name"
            tools:text="@string/str_chat_account" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nick_name"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tv_account"
            app:layout_constraintTop_toBottomOf="@id/tv_account"
            tools:text="你好呀~我的名字叫叶良辰，很高兴认识大家~" />


        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:drawableLeft="@mipmap/ic_to_top"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingTop="10dp"
            android:paddingEnd="29dp"
            android:paddingBottom="10dp"
            android:text="置顶聊天"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:stv_corner="5dp"
            app:stv_solid="@color/color_22_white" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="43dp"
            android:drawableLeft="@mipmap/ic_switch_msg"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="19dp"
            android:paddingTop="10dp"
            android:paddingEnd="22dp"
            android:paddingBottom="10dp"
            android:text="消息免打扰"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toEndOf="@id/tv_to_top"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:stv_corner="5dp"
            app:stv_solid="@color/color_22_white" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:drawableLeft="@mipmap/ic_switch_msg"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="19dp"
            android:paddingTop="10dp"
            android:paddingEnd="22dp"
            android:paddingBottom="10dp"
            android:text="禁言"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toEndOf="@id/tv_to_top"
            app:layout_constraintTop_toBottomOf="@id/tv_free"
            app:stv_corner="5dp"
            app:stv_solid="@color/color_22_white" />

        <LinearLayout
            android:id="@+id/ll_bottom_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_del_friend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:gravity="center"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:text="删除好友"
                android:textColor="@color/color_EA6864"
                android:visibility="visible"
                app:stv_corner="24dp"
                app:stv_solid="@color/white" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_send_msg"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发送消息"
                android:textColor="@color/white"
                android:visibility="visible"
                app:stv_corner="24dp"
                app:stv_solid="@color/color_287FFA" />

        </LinearLayout>

         <com.coorchice.library.SuperTextView
             android:id="@+id/tv_kick_out"
             android:layout_width="match_parent"
             android:layout_height="@dimen/dp_45"
             android:layout_marginBottom="150dp"
             android:gravity="center"
             android:orientation="horizontal"
             android:text="移出本群"
             android:textColor="@color/color_EA6864"
             android:visibility="visible"
             app:layout_constraintBottom_toBottomOf="parent"
             app:stv_corner="24dp"
             app:stv_solid="@color/white" />

         <com.coorchice.library.SuperTextView
