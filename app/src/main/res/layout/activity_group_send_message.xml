<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold"
    android:orientation="vertical">


    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        android:background="@color/white"
        app:titleBarBackground="@color/white"
        app:titleBarDisplayHomeAsUpEnabled="true"
        app:titleBarLeftImage="@drawable/ic_back"
        app:titleBarTitle="" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_report_white_radius"
            android:gravity="left"
            android:hint="请输入群发消息"
            android:paddingLeft="20dip"
            android:paddingTop="12dp"
            android:maxLength="255"
            android:textColor="#000"
            android:textSize="@dimen/em_size_big"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/message"
            android:background="@drawable/selector_comm_btn"
            android:padding="18dp">

            <TextView
                android:id="@+id/tv_my_group_nick_name_s"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="选择好友"
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/tv_my_group_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableRight="@mipmap/ic_item_more"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:text="已选择全部好友"
                android:gravity="center_vertical"
                android:maxLength="8"
                android:maxLines="1"
                android:textColor="#888E9C"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>


        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_140"
            android:layout_marginRight="@dimen/dp_14"
            app:layout_constraintTop_toBottomOf="@id/message"
            android:background="@drawable/shap_blue"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>