<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_13">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">

        <com.hyphenate.easecallkit.widget.EaseImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_avatar" />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_87"
            android:layout_below="@+id/tv_userid"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@mipmap/hb2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_red_package_icon" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_65"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#FFE8D6"
                android:textSize="18dp"
                tools:text="恭喜发财，大吉大利！恭喜发财，大吉大利！大吉大利大吉大利" />

            <TextView
                android:id="@+id/toNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_alignStart="@id/message"
                android:layout_marginTop="3dp"
                android:text="给昵称的专属红包"
                android:textColor="#FFE5C7"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_hongbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="领取红包"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_time_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_80"
                android:paddingBottom="@dimen/dp_5"
                android:text="5分钟有效"
                android:textSize="@dimen/dp_11"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginBottom="@dimen/hb_margin_bottom"
                android:text="零钱红包"
                android:textColor="#FFE5C7"
                android:textSize="10dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="18dp"
                android:gravity="center"
                android:paddingTop="3dp"
                android:layout_marginBottom="@dimen/hb_margin_bottom"
                android:text="12:12:12"
                android:textColor="#FFE5C7"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_toRightOf="@id/iv_userhead"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            tools:text="婉婉" />
    </RelativeLayout>

</LinearLayout>