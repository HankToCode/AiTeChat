<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_86"
    android:layout_marginBottom="10dp"
    android:background="@mipmap/icon_bg_bank"
    android:orientation="horizontal">
<!--    android:background="@drawable/shap_white"-->
    <ImageView
        android:id="@+id/iv_bank_image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@mipmap/icon_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_bank_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="中国银行"
        android:layout_marginLeft="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_bank_image_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bank_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="储蓄卡"
        android:layout_marginLeft="@dimen/dp_6"
        android:textColor="#999999"
        app:layout_constraintLeft_toRightOf="@+id/iv_bank_image_logo"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bank_classify"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_bank_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6240 **** **** 3362"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_card_type"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_22"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dp_35"
        android:background="@drawable/icon_bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/shanchu"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_bank_card_number" />

</androidx.constraintlayout.widget.ConstraintLayout>
