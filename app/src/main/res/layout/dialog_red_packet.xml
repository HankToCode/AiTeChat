<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_350"
        android:layout_centerInParent="true"
        android:background="@mipmap/hbbg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/quxiao" />

        <LinearLayout
            android:id="@+id/ll_red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.hyphenate.easeui.widget.EaseImageView
                android:id="@+id/img_head"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:src="@mipmap/ic_ng_avatar" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="#FFEBAC"
                android:textSize="13dp"
                tools:text="慕枫1127" />


            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text=""
                android:textColor="#FFEBAC"
                android:textSize="21dp"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_closes"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/rel_open"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="38dp">

            <ImageView
                android:id="@+id/img_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/kai" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_red_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableRight="@mipmap/jinru"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="15dp"
            android:text="查看红包详情"
            android:textColor="#FFEBAC"
            android:textSize="12dp"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>
