<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gray"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        android:background="@color/white"
        app:titleBarDisplayHomeAsUpEnabled="true"
        app:titleBarLeftImage="@drawable/ic_back"
        app:titleBarTitle="设置" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:background="@drawable/shape_report_white_radius"
        android:paddingLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingRight="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="添加我时是否需要验证"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16"/>

        <Switch
            android:id="@+id/sb_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_15"
            android:checked="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_notices"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:background="@drawable/shape_report_white_radius"
        android:paddingLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingRight="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新消息通知"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <Switch
            android:id="@+id/switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_15"
            android:checked="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_black"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@drawable/item_select_bg"
        android:drawableRight="@drawable/jingru"
        android:drawableBottom="@drawable/shape_login_line"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_15"
        android:foreground="?attr/selectableItemBackground"
        android:text="黑名单"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_16" />

</LinearLayout>
