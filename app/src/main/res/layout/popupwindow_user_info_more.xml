<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@mipmap/bg_user_info_more"
        android:paddingStart="60dp"
        android:paddingTop="26dp"
        android:paddingEnd="60dp"
        android:paddingBottom="20dp">


        <LinearLayout
            android:id="@+id/llOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="170dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <TextView
                android:id="@+id/tvOptions1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon1"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="禁言"
                android:textColor="@color/color_49525A" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvOptions2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon2"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="移出群组"
                android:textColor="@color/color_49525A" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvOptions3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon3"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="聊天记录"
                android:textColor="@color/color_49525A" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <TextView
                android:id="@+id/tvOptions4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon4"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="分组"
                android:textColor="@color/color_49525A" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvOptions5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/selector_ic_window_icon5"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="拉黑"
                android:textColor="@color/color_49525A" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvOptions6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon6"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="举报"
                android:textColor="@color/color_49525A" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <TextView
                android:id="@+id/tvOptions7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon1"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="禁言"
                android:textColor="@color/color_49525A" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvOptions8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon2"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="移出群组"
                android:textColor="@color/color_49525A" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvOptions9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_window_icon6"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="举报"
                android:textColor="@color/color_49525A" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:src="@mipmap/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>