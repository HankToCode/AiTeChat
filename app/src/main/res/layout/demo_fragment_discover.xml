<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_border_green"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/iv_dc1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/icon_dc1"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:text="美团外卖，送啥都快"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_dc2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@mipmap/icon_dc2"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:text="饿了就点饿了么"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_border_green"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/iv_dc3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/icon_dc3"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:text="全品自营，美到离谱"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_dc4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@mipmap/icon_dc4"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:text="淘你所淘"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_border_green"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/iv_dc5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/icon_dc5"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:text="全球搜索先导者"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_dc6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@mipmap/icon_dc6"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:text="百度一下，你就知道"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>